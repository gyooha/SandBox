<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_show_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show dialog"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@+id/btn_show_full_screen_dialog"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_show_full_screen_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show fullScreen dialog"
        app:layout_constraintTop_toBottomOf="@+id/btn_show_dialog"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_show_dialog_fragment" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_show_dialog_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show fragmentDialog"
        app:layout_constraintTop_toBottomOf="@+id/btn_show_full_screen_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_move_to_main_activity2"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_move_to_main_activity2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go to MainActivty"
        app:layout_constraintTop_toBottomOf="@+id/btn_show_dialog_fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>